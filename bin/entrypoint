#!/usr/bin/env sh

set -e

HOST=$(echo "${PRISMA_ENDPOINT}" | awk -F// '{print $2}' | awk -F: '{print $1}')
PORT=$(echo "${PRISMA_ENDPOINT}" | awk -F: '{print $3}' | awk -F/ '{print $1}')

echo "Waiting for host: ${HOST} ${PORT}"
while ! nc -w 1 -z "${HOST}" "${PORT}"; do
    sleep 0.001
done
echo "Received response from: ${HOST} ${PORT}"

# Run the original command
exec "$@"
